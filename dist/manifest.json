{
	"manifest_version": 2,
	"name": "Chrome BreakView",
	"description": "A breakpoint viewer extension for Chrome",
	"version": "1.0",
	"homepage_url": "https://github.com/davidmuto/chrome-breakview",
	"offline_enabled": true,
	"permissions": [
		"tabs",
		"http://*/*",
		"https://*/*",
		"file:///*/*"
	],

	"background": {
		"scripts": [ "background.js" ]
	},

	"content_scripts": [
		{
			"matches": [
				"http://*/*",
				"https://*/*",
				"file:///*/*"
			],
			"js": [ "contentscript.js" ],
			"run_at": "document_idle",
			"all_frames": false
		}
	],

	"page_action": {
		"default_title": "BreakView",
		"default_popup": "popup.html"
	}
}